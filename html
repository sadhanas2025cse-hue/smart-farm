<body>
    <header>
        <h1>SkyCast</h1>
        <p>Enter a city to get the weather forecast</p>
    </header>
    <main>
        <div class="input-section">
            <input type="text" id="cityInput" placeholder="Enter city name (e.g., New York)">
            <button id="getWeatherBtn">Get Weather</button>
        </div>
        <div id="weatherDisplay" class="weather-card hidden">
            <h2 id="cityName"></h2>
            <p id="temperature"></p>
            <p id="description"></p>
            <p id="humidity"></p>
        </div>
    </main>
    <script>
        // Mock weather data stored in a JavaScript array
        const weatherData = [
            { city: "madurai", temp: 22, desc: "Sunny", humidity: 60 },
            { city: "London", temp: 15, desc: "Cloudy", humidity: 70 },
            { city: "coimbatore", temp: 28, desc: "Rainy", humidity: 80 },
            { city: "chennai", temp: 25, desc: "Partly Cloudy", humidity: 55 },
            { city: "Paris", temp: 18, desc: "Clear", humidity: 65 }
        ];

        // Get DOM elements
        const cityInput = document.getElementById('cityInput');
        const getWeatherBtn = document.getElementById('getWeatherBtn');
        const weatherDisplay = document.getElementById('weatherDisplay');
        const cityName = document.getElementById('cityName');
        const temperature = document.getElementById('temperature');
        const description = document.getElementById('description');
        const humidity = document.getElementById('humidity');

        // Function to display weather data
        function displayWeather(city) {
            // Find the city in the mock data (case-insensitive)
            const data = weatherData.find(item => item.city.toLowerCase() === city.toLowerCase());
            
            if (data) {
                // Update DOM with weather details
                cityName.textContent = data.city;
                temperature.textContent = Temperature: ${data.temp}Â°C;
                description.textContent = Description: ${data.desc};
                humidity.textContent = Humidity: ${data.humidity}%;
                weatherDisplay.classList.remove('hidden');
            } else {
                // Handle city not found
                cityName.textContent = "City not found";
                temperature.textContent = "";
                description.textContent = "Please try another city.";
                humidity.textContent = "";
                weatherDisplay.classList.remove('hidden');
            }
        }

        // Event listener for button click
        getWeatherBtn.addEventListener('click', () => {
            const city = cityInput.value.trim();
            if (city) {
                displayWeather(city);
            } else {
                alert("Please enter a city name.");
            }
        });
    </script>
</body>
