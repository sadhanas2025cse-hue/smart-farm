        /* Weather-Related Attractive Background: Dynamic Sky with Clouds */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #abe2f8 0%, #2e737c 30%, #e9bce9 70%, #D3D3D3 100%);
            background-size: 400% 400%;
            animation: weatherShift 15s ease-in-out infinite;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            color: #fff;
            position: relative;
            overflow: hidden;
        }

        /* Animated Clouds */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml;base64,') repeat, 
                        radial-gradient(circle at 20% 20%, rgba(255,255,255,0.3) 0%, transparent 50%),
                        radial-gradient(circle at 80% 80%, rgba(255,255,255,0.2) 0%, transparent 50%);
            animation: cloudDrift 20s linear infinite;
            z-index: -1;
        }

        @keyframes weatherShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        @keyframes cloudDrift {
            0% { transform: translateX(-100px); }
            100% { transform: translateX(100px); }
        }

